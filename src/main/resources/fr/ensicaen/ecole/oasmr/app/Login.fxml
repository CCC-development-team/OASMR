<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" > <!-- fx:controller="fr.ensicaen.ecole.oasmr.app.controller.LoginController"-->
    <stylesheets>
        <URL value="@css/style.css"/>
    </stylesheets>
    <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="200.0" prefWidth="300.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
        </padding>
        <ImageView fitHeight="112.0" fitWidth="115.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@img/OASMR.png"/>
        </ImageView>


        <Text fx:id="loginError" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" VBox.vgrow="NEVER"/>
        <HBox>
            <JFXTextField fx:id="IPServer" promptText="IP Server">
                <VBox.margin>
                    <Insets bottom="20.0" right="50.0"/>
                </VBox.margin>
            </JFXTextField>
            <JFXTextField fx:id="portNumber" promptText="Port Number">
                <VBox.margin>
                    <Insets bottom="20.0" right="50.0"/>
                </VBox.margin>
            </JFXTextField>
            <VBox.margin>
                <Insets bottom="20.0"/>
            </VBox.margin>
        </HBox>
        <JFXTextField fx:id="loginUser" promptText="UserName">
            <VBox.margin>
                <Insets bottom="20.0"/>
            </VBox.margin>
        </JFXTextField>
        <JFXPasswordField fx:id="loginPassword" promptText="Password">
            <VBox.margin>
                <Insets bottom="20.0"/>
            </VBox.margin>
        </JFXPasswordField>

        <JFXButton fx:id="loginConnect" ripplerFill="#e8dcdc" text="Connect">
            <VBox.margin>
                <Insets top="20"/>
            </VBox.margin>
        </JFXButton>
    </VBox>
</AnchorPane>
